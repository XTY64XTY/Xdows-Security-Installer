<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Xdows_Security_Installer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Xdows_Security_Installer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Xdows Security Installer">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Padding="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" 
                    Background="{ThemeResource LayerFillColorDefaultBrush}"
                    CornerRadius="8"
                    Padding="20"
                    Width="120"
                    Height="120"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BorderThickness="1"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                <Image Source="ms-appx:///logo.ico"
                       Width="64"
                       Height="64"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Stretch="Uniform"/>
            </Border>

            <!-- 右侧文本区域 -->
            <StackPanel Grid.Column="1" 
                        VerticalAlignment="Center" 
                        Margin="40,0,0,0">
                <TextBlock Text="下载最新版本的 Xdows Security"
                           FontSize="24"
                           FontWeight="SemiBold"
                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                           TextWrapping="Wrap"
                           LineHeight="32"/>

                <TextBlock Text="现代、简洁的安全软件"
                           FontSize="14"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           Margin="0,8,0,0"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Grid>

        <!-- 底部按钮区域 -->
        <Grid Grid.Row="1" 
              Background="{ThemeResource LayerFillColorDefaultBrush}"
              Padding="40"
              BorderThickness="0,1,0,0"
              BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
            <Button x:Name="InstallButton"
                    Content="下载并安装"
                    Width="200"
                    Height="40"
                    HorizontalAlignment="Right"
                    FontSize="14"
                    FontWeight="SemiBold"
                    CornerRadius="4">
                <Button.Resources>
                    <ResourceDictionary>
                        <ResourceDictionary.ThemeDictionaries>
                            <ResourceDictionary x:Key="Light">
                                <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#1A66D2"/>
                                <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#084CAF"/>
                            </ResourceDictionary>
                        </ResourceDictionary.ThemeDictionaries>
                    </ResourceDictionary>
                </Button.Resources>
            </Button>
        </Grid>
    </Grid>
</Window>
